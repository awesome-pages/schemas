	},
	"bugs": {
		"url": "https://github.com/awesome-pages/schemas/issues"
	},
	"homepage": "https://awesome-pages.github.io/schemas",
	"license": "MIT",
	"author": "Awesome Pages",
	"dependencies": {
		"@awesome-pages/parser": "^1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/node": "^22.7.4",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	}
